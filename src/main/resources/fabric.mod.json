    "client": [
      {
        "adapter": "kotlin",
        "value": "dev.intelligentcreations.infernoagriculture.InfernoAgricultureClient"
      }
    ]
  },
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.17.x"
